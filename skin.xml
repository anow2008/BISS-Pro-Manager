<skin>
    <!-- Main BISSPro Screen -->
    <screen name="BISSPro" position="center,center" size="600,500" title="BISS Pro">
        <widget name="menu" position="10,10" size="580,420" font="Regular;22" />
        <widget name="status" position="10,440" size="580,40" font="Regular;18" />
    </screen>

    <!-- ScrollText Screen -->
    <screen name="ScrollText" position="center,center" size="900,600" title="BISS Keys">
        <widget name="text" position="10,10" size="880,520" font="Regular;22"/>
        <widget name="hint" position="10,540" size="880,40" font="Regular;18"/>
    </screen>

    <!-- EditListScreen -->
    <screen name="EditListScreen" position="center,center" size="900,600" title="Select Key to Edit">
        <widget name="list" position="10,10" size="880,520" font="Regular;20"/>
        <widget name="hint" position="10,540" size="880,40" font="Regular;18"/>
    </screen>

    <!-- HexKeyInput Screen -->
    <screen name="HexKeyInput" position="center,center" size="900,600" title="Enter BISS Key">
        <widget name="key" position="10,40" size="880,40" font="Regular;24"/>
        <widget name="list" position="10,100" size="880,300" font="Regular;22"/>
        <widget name="hint" position="10,420" size="880,40" font="Regular;18"/>
    </screen>
</skin>
