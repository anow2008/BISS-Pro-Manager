<skin>
    <screen name="BISSPro" position="center,center" size="900,500" title="BISS Pro Manager">
        <widget name="menu"
            position="50,70"
            size="800,360"
            scrollbarMode="showOnDemand"
            font="Regular;28"
            itemHeight="45"
        />

        <widget source="title" render="Label"
            position="50,20"
            size="800,40"
            font="Regular;32"
            halign="center"
            valign="center"
        />

        <ePixmap
            position="0,0"
            size="900,500"
            pixmap="skin_default/background.png"
            zPosition="-1"
            alphatest="blend"
        />
    </screen>

    <!-- MessageBox -->
    <screen name="MessageBox" position="center,center" size="700,260" title="Message">
        <widget name="text"
            position="30,30"
            size="640,150"
            font="Regular;26"
        />
        <widget name="ErrorPixmap"
            position="20,20"
            size="10,10"
            alphatest="blend"
        />
    </screen>

    <!-- ChoiceBox -->
    <screen name="ChoiceBox" position="center,center" size="700,400" title="Select">
        <widget name="list"
            position="30,60"
            size="640,300"
            font="Regular;26"
            itemHeight="40"
        />
    </screen>
</skin>
